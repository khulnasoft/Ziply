{
  "name": "ziply",
  "description": "Zip/Tar a complete folder or a glob list into a zip/tgz file",
  "version": "3.1.8",
  "author": "Marius Augenstein",
  "bugs": "https://github.com/khulnasoft/ziply/issues",
  "dependencies": {
    "archiver": "^7.0.1",
    "glob": "^11.0.0",
    "is-glob": "^4.0.3",
    "synopkg": "^13.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@swc/core": "^1.8.0",
    "@swc/jest": "^0.2.37",
    "@types/archiver": "^6.0.3",
    "@types/glob": "^8.1.0",
    "@types/is-glob": "^4.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
    "chokidar": "^4.0.1",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.1",
    "ts-jest": "^29.2.5",
    "tslib": "^2.8.1",
    "typescript": "^5.6"
  },
  "exports": {
    "types": "./@typings/Ziply.d.ts",
    "import": "./dist/lib/mjs/Ziply.js",
    "require": "./dist/lib/cjs/Ziply.js"
  },
  "files": [
    "README.md",
    "lib",
    "dist",
    "@typings"
  ],
  "homepage": "https://github.com/khulnasoft/ziply#readme",
  "keywords": [
    "async",
    "folder",
    "promise",
    "zip"
  ],
  "license": "MIT",
  "main": "dist/lib/cjs/Ziply.js",
  "module": "dist/lib/mjs/Ziply.js",
  "repository": "khulnasoft/ziply.git",
  "scripts": {
    "build": "run-s clean lint build:mjs build:cjs fixup",
    "build:cjs": "tsc -p tsconfig-cjs.json",
    "build:dev": "tsc -p tsconfig-mjs.json --watch",
    "build:mjs": "tsc -p tsconfig-mjs.json",
    "clean": "rimraf dist/",
    "fixup": "./fixup.sh",
    "lint": "npx @biomejs/biome lint ./lib ./test --write",
    "test": "jest --coverage --"
  },
  "typeRoots": [
    "./@typings",
    "./node_modules/@types/"
  ],
  "typings": "@typings/Ziply.d.ts"
}
